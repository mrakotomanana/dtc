body {
    background-color: blue;
}

.container {
    display: flex;
    justify-content: center;
}

.item-content {
    width: 200px;
    height: 200px;
    margin: 5px;
    background-color: orange;
}

/* extra small | smart-watch */
@media only screen and (max-width: 600px){
    body{
        background-color: red;
    }

    .container {
        flex-flow: row wrap;
        justify-content: center;
    }

    .item-content {
        width: 100%;
    }
}

/* small | phone */
@media only screen and (min-width: 600px){
    body{
        background-color: rgb(255, 221, 0);
    }

    .container {
        flex-flow: row wrap;
        justify-content: center;
    }

    .item-content {
        width: 900px;
    }
}

/* medium | tablet */
@media only screen and (min-width: 768px){
    body{
        background-color: rgb(0, 255, 123);
    }

    .container {
        flex-flow: row wrap;
        justify-content: center;
    }

    .item-content {
        width: 400px;
    }
}

/* medium-large | laptop/desktop */
@media only screen and (min-width: 992px){
    body{
        background-color: rgb(255, 0, 230);
    }

    .container {
        justify-content: center;
        flex-flow: row wrap;
    }
    
    .item-content {
        width: 300px;
    }
}

/*  extra-large | extra-desktop */
@media only screen and (min-width: 1200px){
    body{
        background-color: rgb(0, 0, 0);
    }

    .container {
        justify-content: center;
        flex-flow: row nowrap;
    }

    .item-content {
        width: 200px;
    }
}

